  align-items: center;
  justify-content: center;
  width: 2rem;
  height: 2rem;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 0.375rem;
  color: {{ section.settings.gradient_start | default: '#0ea5e9' }};
  cursor: pointer;
  transition: all 0.2s;
  backdrop-filter: blur(10px);
}

#newsletter-{{ section.id }} .newsletter__control-btn:hover {
  background: white;
  transform: translateY(-2px);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2);
}

#newsletter-{{ section.id }} .newsletter__control-btn svg {
  width: 16px;
  height: 16px;
}

/* Default state: playing - show pause icon */
#newsletter-{{ section.id }} .newsletter__control-btn--play .newsletter__play-icon {
  display: none;
}

#newsletter-{{ section.id }} .newsletter__control-btn--play .newsletter__pause-icon {
  display: block;
}

/* Paused state - show play icon */
#newsletter-{{ section.id }} .newsletter__control-btn--play.paused .newsletter__pause-icon {
  display: none;
}

#newsletter-{{ section.id }} .newsletter__control-btn--play.paused .newsletter__play-icon {
  display: block;
}

#newsletter-{{ section.id }} .newsletter__form {
  max-width: 28rem;
  margin: 0 auto;
}

#newsletter-{{ section.id }} .newsletter__input-wrapper {
  display: flex;
  gap: 0.5rem;
}

#newsletter-{{ section.id }} .newsletter__input {
  flex: 1;
  padding: 0.75rem 1rem;
  border: none;
  border-radius: 0.5rem;
  font-size: 1rem;
  color: #0f172a;
  background: white;
  outline: none;
  transition: all 0.2s;
}

#newsletter-{{ section.id }} .newsletter__input:focus {
  box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.3);
}

#newsletter-{{ section.id }} .newsletter__input::placeholder {
  color: #94a3b8;
}

#newsletter-{{ section.id }} .newsletter__button {
  padding: 0.75rem 1.5rem;
  background: white;
  color: {{ section.settings.button_text_color | default: '#2563eb' }};
  border: none;
  border-radius: 0.5rem;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  white-space: nowrap;
}

#newsletter-{{ section.id }} .newsletter__button:hover {
  background: rgba(255, 255, 255, 0.9);
  transform: translateY(-1px);
}

@media (max-width: 767px) {
  #newsletter-{{ section.id }} {
    padding: 3rem 1rem;
  }
  
  #newsletter-{{ section.id }} .newsletter__carousel {
    padding: 2rem 1rem;
    margin-bottom: 2rem;
  }

  #newsletter-{{ section.id }} .newsletter__carousel-wrapper {
    min-height: 120px;
    max-height: 120px;
  }
  
  #newsletter-{{ section.id }} .newsletter__slide-heading {
    font-size: 1.5rem;
  }
  
  #newsletter-{{ section.id }} .newsletter__slide-description {
    font-size: 1rem;
  }

  #newsletter-{{ section.id }} .newsletter__carousel-controls {
    top: 0.5rem;
    right: 0.5rem;
    gap: 0.375rem;
  }

  #newsletter-{{ section.id }} .newsletter__control-btn {
    width: 1.875rem;
    height: 1.875rem;
  }

  #newsletter-{{ section.id }} .newsletter__control-btn svg {
    width: 14px;
    height: 14px;
  }
  
  #newsletter-{{ section.id }} .newsletter__input-wrapper {
    flex-direction: column;
  }
  
  #newsletter-{{ section.id }} .newsletter__button {
    width: 100%;
  }
}
</style>

<script>
(function() {
  const carousel = document.querySelector('#newsletter-{{ section.id }} [data-carousel-slides]');
  if (!carousel) return;

  const slides = carousel.querySelectorAll('.newsletter__slide');
  const prevBtn = document.querySelector('#newsletter-{{ section.id }} [data-carousel-prev]');
  const nextBtn = document.querySelector('#newsletter-{{ section.id }} [data-carousel-next]');
  const playBtn = document.querySelector('#newsletter-{{ section.id }} [data-carousel-play]');
  
  let currentIndex = 0;
  let isPlaying = true;
  let intervalId = null;

  function showSlide(index) {
    slides.forEach((slide, i) => {
      slide.classList.toggle('active', i === index);
    });
  }

  function nextSlide() {
    currentIndex = (currentIndex + 1) % slides.length;
    showSlide(currentIndex);
  }

  function prevSlide() {
    currentIndex = (currentIndex - 1 + slides.length) % slides.length;
    showSlide(currentIndex);
  }

  function startAutoplay() {
    isPlaying = true;
    playBtn.classList.remove('paused');
    intervalId = setInterval(nextSlide, 5000);
  }

  function stopAutoplay() {
    isPlaying = false;
    playBtn.classList.add('paused');
    clearInterval(intervalId);
  }

  function togglePlayPause() {
    if (isPlaying) {
      stopAutoplay();
    } else {
      startAutoplay();
    }
  }

  // Event listeners
  prevBtn.addEventListener('click', () => {
    prevSlide();
    if (isPlaying) {
      stopAutoplay();
      startAutoplay(); // Restart timer
    }
  });

  nextBtn.addEventListener('click', () => {
    nextSlide();
    if (isPlaying) {
      stopAutoplay();
      startAutoplay(); // Restart timer
    }
  });

  playBtn.addEventListener('click', togglePlayPause);

  // Initialize
  showSlide(0);
  startAutoplay();
})();
</script>

