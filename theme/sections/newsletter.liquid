{% comment %}
  Newsletter Section with Promotional Carousel
  Email capture with rotating promotions
{% endcomment %}

<section class="newsletter" id="newsletter-{{ section.id }}">
  <div class="newsletter__container">
    
    {%- comment -%} Promotional Carousel {%- endcomment -%}
    <div class="newsletter__carousel">
      <div class="newsletter__carousel-wrapper">
        <div class="newsletter__slides" data-carousel-slides>
          {% for block in section.blocks %}
            <div class="newsletter__slide" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
              <div class="newsletter__slide-content">
                {% if block.settings.icon != blank %}
                  <div class="newsletter__slide-icon">{{ block.settings.icon }}</div>
                {% endif %}
                {% if block.settings.heading != blank %}
                  <h3 class="newsletter__slide-heading">{{ block.settings.heading }}</h3>
                {% endif %}
                {% if block.settings.description != blank %}
                  <p class="newsletter__slide-description">{{ block.settings.description }}</p>
                {% endif %}
                {% if block.settings.badge_text != blank %}
                  <span class="newsletter__slide-badge">{{ block.settings.badge_text }}</span>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      
      {%- comment -%} Carousel Controls {%- endcomment -%}
      <div class="newsletter__carousel-controls">
        <button class="newsletter__control-btn" data-carousel-prev aria-label="Previous promotion">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="newsletter__control-btn newsletter__control-btn--play" data-carousel-play aria-label="Pause carousel">
          <svg class="newsletter__pause-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="6" y="4" width="4" height="16"></rect>
            <rect x="14" y="4" width="4" height="16"></rect>
          </svg>
          <svg class="newsletter__play-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="5 3 19 12 5 21 5 3"></polygon>
          </svg>
        </button>
        <button class="newsletter__control-btn" data-carousel-next aria-label="Next promotion">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>

    </div>

    {%- comment -%} Newsletter Form {%- endcomment -%}
    <form 
      action="{{ section.settings.form_action | default: '/contact#newsletter' }}" 
      method="post" 
      class="newsletter__form"
      accept-charset="UTF-8"
    >
      <input type="hidden" name="form_type" value="customer" />
      <input type="hidden" name="utf8" value="‚úì" />
      <input type="hidden" name="contact[tags]" value="newsletter" />
      
      <div class="newsletter__input-wrapper">
        <input
          type="email"
          name="contact[email]"
          placeholder="{{ section.settings.placeholder | default: 'Enter your email address' }}"
          class="newsletter__input"
          required
          aria-label="Email address"
        />
        <button type="submit" class="newsletter__button">
          {{ section.settings.button_text | default: 'Subscribe' }}
        </button>
      </div>
    </form>
  </div>
</section>

<style>
#newsletter-{{ section.id }} {
  padding: 4rem 1.5rem;
  background: linear-gradient(to right, {{ section.settings.gradient_start | default: '#0ea5e9' }}, {{ section.settings.gradient_end | default: '#0284c7' }});
  font-family: 'Assistant', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

#newsletter-{{ section.id }} .newsletter__container {
  max-width: 56rem;
  margin: 0 auto;
  text-align: center;
  color: white;
}

/* Carousel */
#newsletter-{{ section.id }} .newsletter__carousel {
  position: relative;
  margin-bottom: 2.5rem;
  padding: 2.5rem 1.5rem;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 1rem;
  backdrop-filter: blur(10px);
